# ========================
# üåê Database (REQUIRED)
# ========================
# Your PostgreSQL connection URL
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
POSTGRES_URL=postgres://username:password@host:5432/dbname

# ========================
# üîê Security
# ========================
# JWT secret for signing tokens
# Auto-generated if not set in Windsurf Deploy Script
JWT_SECRET=your_jwt_secret_here

# ========================
# üí≥ Stripe API Keys
# ========================
# Secret and public keys for Stripe payments
# Auto-generated if not set in Windsurf Deploy Script
STRIPE_SECRET_KEY=sk_test_your_secret_here
STRIPE_PUBLIC_KEY=pk_test_your_public_here

# ========================
# üåç App Settings
# ========================
# URL where your app will be hosted
NEXT_PUBLIC_APP_URL=https://your-app-url.vercel.app
NODE_ENV=production

# ========================
# üì® Email Settings (Optional)
# ========================
# If your app sends emails, fill these in
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_email_username
SMTP_PASS=your_email_password

# ========================
# üîë Optional 3rd Party Services
# ========================
# Example: Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
